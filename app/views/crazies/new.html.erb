<%= form_for @crazy do |f| %>
<div>
  <span>How many hours you slept last night?</span>
  <div class="radio">
  <%= f.radio_button :sleep, 0 %>
  <%= f.label :sleep, "less than 4 hrs" %>
</div>
  <div class="radio">
  <%= f.radio_button :sleep, 1 %>
  <%= f.label :sleep, "4-6 hrs" %>
</div>
  <div class="radio">
  <%= f.radio_button :sleep, 2 %>
  <%= f.label :sleep, "6-8 hrs" %>
</div>
</div>
<div>
  <div>Were you late to your class or appointment today?</div>
  <div class="radio">
  <%= f.radio_button :late, true %>
  <%= f.label :late, "Yes" %>
  </div>
  <div class="radio">
  <%= f.radio_button :late, false %>
  <%= f.label :late, "No" %>
  </div>
</div>
<div>
  <div>Did you eat your lunch today?</div>
  <div class="radio">
  <%= f.radio_button :eat, true %>
  <%= f.label :eat, "Yes" %>
  </div>
  <div class="radio">
  <%= f.radio_button :eat, false %>
  <%= f.label :eat, "No" %>
  </div>
</div>
<div>
  <div>Did you took break from your work today?</div>
  <div class="radio">
  <%= f.radio_button :no_break, true %>
  <%= f.label :no_break, "Yes" %>
  </div>
  <div class="radio">
  <%= f.radio_button :no_break, false %>
  <%= f.label :no_break, "No" %>
  </div>
</div>
<div>
  <div>Did you exercise today?</div>
  <div class="radio">
    <%= f.radio_button :exercise, true %>
    <%= f.label :exercise, "Yes" %>
  </div>
  <div class="radio">
    <%= f.radio_button :exercise, false %>
    <%= f.label :exercise, "No" %>
  </div>
</div>
<div class="radio">
  <div>Did you got drunk today?</div>
  <div class="radio">
    <%= f.radio_button :drunk, true %>
    <%= f.label :drunk, "Yes" %>
</div>
<div class="radio">
  <%= f.radio_button :drunk, false %>
  <%= f.label :drunk, "No" %>
</div>
</div>
<div class="radio">
  <div>Did you call your mom today?</div>
  <div class="radio">
  <%= f.radio_button :callmom, true %>
  <%= f.label :callmom, "Yes" %>
</div>
<div class="radio">

  <%= f.radio_button :callmom, false %>
  <%= f.label :callmom, "No" %>
</div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
<%= f.submit %>
  </div>
</div>
<% end %>
